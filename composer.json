{
  "require": {
    "guzzlehttp/guzzle": "^7.3",
    "ext-json": "*",
    "vlucas/phpdotenv": "^5.6",
    "php-di/php-di": "^6.4",
    "ext-bcmath": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.9"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "check-style": "phpcs --standard=phpcs.xml ./src ./tests",
    "fix-style": "phpcbf --standard=phpcs.xml ./src ./tests",
    "test": "vendor/bin/phpunit --testdox"
  }
}
